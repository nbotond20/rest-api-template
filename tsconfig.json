{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es6",
    "skipLibCheck": true,
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "typeRoots": ["types"],
    "resolveJsonModule": true,
    "lib": ["es2015", "DOM"],
    "types": ["node"],
    "paths": {
      "@models": ["./src/models/index.ts"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@routes/*": ["./src/routes/*"],
      "@domains/*": ["./src/domains/*"],
      "@stores/*": ["./src/stores/*"],
      "@db": ["./src/db.ts"]
    }
  },
  "include": ["src/**/*", "test/**/*"]
}
