{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es6",
    "skipLibCheck": true,
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "typeRoots": ["types"],
    "resolveJsonModule": true,
    "lib": ["es2015", "DOM"],
    "types": ["node"]
  },
  "include": ["src/**/*", "test/**/*"]
}
